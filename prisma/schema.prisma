datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String             @id @default(uuid())
  firebaseIdToken  String             @unique
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  email            String             @unique
  name             String
  avatar           String?
  joinedProjects   Membership[]
  likeProjects     Project[]
}

model Project {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  name             String
  members          Membership[]
  likedUsers       User[]
  programs         Program[]
  tags             Tag[]
}

model Tag {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())
  name            String
  projects        Project[]
}

model Membership {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  role      String
}

model Program {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  name      String?
  path      String
}
